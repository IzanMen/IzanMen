<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Itim&display=swap');

	:root {
		--background: linear-gradient(#221133, #000011 500px);
		--background-color: #000;
		--color: #fff;
		--color-2: #fffa;
		--bento: #2138; 
		--experiencia-opacity: 0.19;

		font-family: "Inter", sans-serif;
		font-size: .9rem;

		h1 {
			font-weight: 400;
		}

		h1, h2, h3, h4, h5, h6 {
			text-wrap: balance;
		}

		& p, a {
			font-size: 1.1rem;
			margin-block-end: 0;
			margin-block-start: 0;
			text-wrap: pretty;
		}

		& a, p, h1, h2, h3, h4, h5, h6 {
			line-height: 1.5rem;
			font-family: 'Itim', cursive;
		}

		& header p {
			font-family: "Inter", sans-serif;
		}
	}

	body.light-mode {
		--background: linear-gradient(#c8a2c8, #b0b8ff 500px);
		--background-color: #fff;
		--color: #000;
		--color-2: #000a;
		--bento: #fff8;
		--experiencia-opacity: .6;
	}

	body {
		background: var(--background);
		color: var(--color);
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;

		transition: background-color .2s, color .2s, box-shadow .2s, linear-gradient .2s;
		transition-delay: 0;
		transition-timing-function: linear;
	}
		
	html {
		scroll-behavior: smooth;
	}

	.mode-svg {
		height: 25px;
		width: 25px;
		transform: translate(-0.5px, -0.5px);
	}
		
</style>
