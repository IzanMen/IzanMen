---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import Main from '../components/main/Main.astro';
import Experiencia from '../components/experiencia/Experiencia.astro';
import Habilidades from '../components/habilidades/Habilidades.astro';
import Proyectos from '../components/proyectos/Proyectos.astro';
import Cursos from '../components/cursos/Cursos.astro';
import Footer from '../components/footer/Footer.astro';
---

<Layout>
	<Header />	
	<Main />
	<Experiencia />
	<Habilidades />
	<div class="proyectos-container">
		<Proyectos />
	</div>
	<Cursos />
	<Footer />
</Layout>

<style>
	
	.proyectos-container {
		width: 100%;
		height: fit-content;
		margin-top: 100px;
		background-color: #fff;
		padding: 100px 0;
		border-radius: 30px;
	}

</style>
