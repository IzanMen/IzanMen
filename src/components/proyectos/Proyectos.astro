---
import Proyecto from './Proyecto.astro';

export interface Props {
    t: any;
}

const { t } = Astro.props;
---

<section id="proyectos">
    <h2>{t.projects.title}</h2>
    <div class="proyectos-content">
        <Proyecto 
            img="promenorca-captura.webp"
            github="https://github.com/IzanMen/promenorca"   
            website="https://promenorca.com" 
            technologies="HTML,CSS,JS,ASTRO"
        >
            <p>{t.projects.description1}</p>
        </Proyecto>
        <Proyecto 
            img="loesport-captura.webp"
            github="https://github.com/IzanMen/loesport"   
            website="https://loesport.es" 
            technologies="HTML,CSS,JS"
        >
            <p>{t.projects.description2}.</p>
        </Proyecto>
        <Proyecto 
            img="isanimal-captura.webp"
            github=""   
            website="https://isanimalguide.com" 
            technologies="WordPress"
        >
            <p>{t.projects.description3}.</p>
        </Proyecto>
        <Proyecto 
            img="porfolio-captura.webp"
            github="https://github.com/IzanMen/IzanMen"   
            website="https://izanmen-dev.vercel.app" 
            technologies="HTML,CSS,JS,ASTRO"
        >
            <p>{t.projects.description2}.</p>
        </Proyecto>
    </div>
</section>

<style>
    section {
        width: 60%;
        max-width: 800px;
        margin: 0 auto;

        color: #000;
    }

    .proyectos-content {
        margin-top: 25px;

        display: flex;
        flex-direction: column;
        gap: 50px;

        & p {
            line-height: 1rem;
            font-size: .9rem;
            font-weight: 500;
        }
    }
    
    @media screen and (max-width: 1057px) {
        section {
            width: 95%;
            padding-top: 0;
            margin-top: 100px;
            text-align: center;
        }

        .proyectos-content {
            & p {
                font-size: 1.1rem;
                text-align: left;
            }
        }
    }
</style>