<style>

    a {
        text-decoration: none;
    }

    svg {
        width: 30px;
        height: 30px;
    }

    svg:hover {
        transform: scale(1.1);
    }

    .github-icon {
        width: 27px;
        height: 27px;
        margin-top: -2px;
    }

    .github-icon-black {
        width: 20px;
        height: 20px;
    }

    .website-icon {
        width: 23px;
        height: 23px;
    }

</style>