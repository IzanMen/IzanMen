---
import Social from '../Social.astro';

export interface Props {
    t: any;
}

const { t } = Astro.props;
---

<footer>
    <p>© 2024 Izan Sánchez</p>
    <Social icon="GitHub-white" link='https://github.com/IzanMen/'/>
    <ul>
        <li><a href="#experiencia">{t.header.experience}</a></li>  
        <li><a href="#habilidades">{t.header.skills}</a></li>
        <li><a href="#proyectos">{t.header.projects}</a></li>
        <li><a href="#cursos">{t.header.courses}</a></li>
    </ul>
</footer>

<style>

    footer {
        width: 60%;
        max-width: 800px;
        margin: 0 auto;
        font-size: .8rem;

        display: flex;
        justify-content: space-between;
        align-items: center;

        height: 100px;
        margin-top: 35px;
    }

    ul {
        list-style: none;
        display: flex;
        gap: 15px;

        & a {
            font-family: 'Inter', sans-serif;
            text-decoration: none;
            color: var(--color);
            font-size: .8rem;
        }
    }
</style>