---
import Curso from './Curso.astro';

export interface Props {
    t: any;
}

const { t } = Astro.props;
---

<section id="cursos">
    <h2>{t.courses.title}</h2>
    <p>{t.courses.description}</p>
    <div class="cursos-content">
        <Curso num="1" autor="soydalto" img="curso-html-css.png" link='https://www.youtube.com/watch?v=ELSm-G201Ls'/>
        <Curso num="2" autor="soydalto" img="curso-js-cero.png" link='https://www.youtube.com/watch?v=z95mZVUcJ-E&t=8s'/>
        <Curso num="3" autor="soydalto" img="curso-js-junior.png" link='https://www.youtube.com/watch?v=xOinGb2MZSk&t=3173s'/>
        <Curso num="4" autor="midulive" img="curso-astro.png" link="https://www.youtube.com/watch?v=RB5tR_nqUEw&t=1408s"/>
        <Curso num="5" autor="soydalto" img="curso-git.png" link='https://www.youtube.com/watch?v=9ZJ-K-zk_Go&t=1529s' />
    </div>
</section>

<style>

    h2 {
        margin-bottom: 20px;
    }

    section {
        width: 60%;
        max-width: 800px;
        margin: 0 auto;
        padding-top: 100px;

        position: relative;
    }

    .cursos-content {
        margin-top: 40px;
        width: 100%;

        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }

    @media screen and (max-width: 1300px) {
        .cursos-content {
            justify-items: center;
        }
    }

    @media screen and (max-width: 1057px) {
        section {
            width: 80%;
            padding-top: 0;
            margin-top: 100px;
            text-align: center;
        }

        .cursos-content {
            grid-template-columns: repeat(1, 1fr);
            width: 100%;
        }
    }

    @media screen and (max-width: 700px) {
        .cursos-content {
            grid-template-columns: repeat(1, 1fr);
            justify-items: center;
        }
    }
</style>