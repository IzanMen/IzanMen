---
import Idioma from './Idioma.astro';
import Modo from './Modo.astro';

---

<header>
	<ul class="nav">
		<li class="nav-item">
			<a href="#experiencia">EXPERIENCIA</a>
		</li>
		<li class="nav-item">
			<a href="#habilidades">HABILIDADES</a>
		</li>
		<li class="nav-item">
			<a href="#proyectos">PROYECTOS</a>
		</li>
		<li class="nav-item">
			<a href="#cursos">CURSOS</a>
		</li>
	</ul>
	<div class="nav-seleccion"> 
		<Idioma />
		<Modo />
	</div>
</header>

<style>
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 60%;
		height: 70px;
		max-width: 800px;
		margin: 0 auto;
	}

	.nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 450px;
		list-style: none;
	}

	.nav-item a {
		color: inherit;
		text-decoration: none;

	}

	.nav-seleccion {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 10px;
		width: fit-content;
	}
</style>
